{%- set data = pdata.data.pdata -%}
{%- set bg = data.content.meta_tags[0].image.filename -%}

<!DOCTYPE html>
<html lang="en">
<head>
  <style>
    body {
      {%- if bg %}
      background-image: url("{{- bg -}}");
      background-size: cover;
      {%- endif %}
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      height: 627px;
      margin: 0;
      width: 1200px;
    }
    .centered {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .pin {
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
    }
    p {
      font-size: 3.5rem;
    }
  </style>
</head>
<body>
  <div class="pin centered">
    <p>{{ pdata.data.social_image.title }}</p>
  </div>
</body>
</html>
